<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Design.PreviewWith>
    <StackPanel Width="400" Spacing="10">      
        <StackPanel Background="{DynamicResource SystemRegionBrush}">
          <LoadingIndicator />
        </StackPanel>
    </StackPanel>
  </Design.PreviewWith>
 
  <ControlTheme x:Key="{x:Type LoadingIndicator}" TargetType="LoadingIndicator">
    <Setter Property="Width" Value="40"/>
    <Setter Property="Height" Value="40"/>
    <Setter Property="Template">
      <ControlTemplate>
        <Canvas Width="{TemplateBinding Height}"
            Height="{TemplateBinding Height}">
          <Ellipse
            Width="{TemplateBinding Height}"
            Height="{TemplateBinding Height}"
            Stroke="{DynamicResource SystemAccentColorLight3}"
            StrokeThickness="4"
            StrokeDashArray="12,4">
          </Ellipse>
        </Canvas>
      </ControlTemplate>
    </Setter>
    <ControlTheme.Animations>
      <Animation IterationCount="INFINITE" Duration="0:0:1">
        <KeyFrame Cue="0%">
          <Setter Property="RotateTransform.Angle" Value="0.0"/>
        </KeyFrame>
        <KeyFrame Cue="100%">
          <Setter Property="RotateTransform.Angle" Value="360.0"/>
        </KeyFrame>
      </Animation>
    </ControlTheme.Animations>
  </ControlTheme>
</ResourceDictionary>
