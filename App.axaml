<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaUIComponents.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
  
    <Application.Styles>
        <FluentTheme />
      <Styles>
      <Styles.Resources>
        <ResourceDictionary>
          <ResourceDictionary.MergedDictionaries>
            <MergeResourceInclude Source="avares://AvaloniaUIComponents/Controls/LoadingIndicator.axaml"/>
            <MergeResourceInclude Source="avares://AvaloniaUIComponents/Controls/ReactiveButton.axaml"/>
          </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
      </Styles.Resources>
      </Styles>
    </Application.Styles>
</Application>